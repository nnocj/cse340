<% if (title) { %>
  <h1><%= title %></h1>
<% } %>

<%- messages() %>

<% var errors = typeof errors !== 'undefined' ? errors : null; %>

<% if (errors) { %>
  <ul class="notice">
    <% (Array.isArray(errors) ? errors : [errors]).forEach(error => { %>
      <li><%= error.msg || error %></li>
    <% }) %>
  </ul>
<% } %>
 
